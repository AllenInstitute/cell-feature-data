{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Cell Feature Dataset Specification",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "megaset": {
            "$ref": "input-megaset.schema.json"
        },
        "dataset": {
            "$ref": "input-dataset-info.schema.json"
        },
        "feature-defs": {
            "description": "File that describes the measured feature definitions",
            "type": "array",
            "items": {
                "$ref": "feature-def.schema.json"
            }
        },
        "measured-features": {
            "$ref": "input-measured-features.schema.json"
        }
    },
    "required": [
        "dataset",
        "feature-defs",
        "measured-features"
    ]
}